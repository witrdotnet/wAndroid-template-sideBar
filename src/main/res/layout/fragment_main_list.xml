<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <ImageView
        android:id="@+id/element_icon"
        android:layout_width="36dip"
        android:layout_height="36dip"
        android:src="@mipmap/ic_launcher"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        />

    <TextView android:id="@+id/element_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="42dip"
        android:textStyle="bold"
        android:textSize="18dp"
        android:paddingRight="23dp"
        />

    <TextView android:id="@+id/element_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="42dip"
        android:layout_below="@+id/element_title"
        android:textSize="14dp"
        android:paddingRight="23dp"
        />

    <TextView android:id="@+id/element_date"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="42dip"
        android:layout_below="@+id/element_content"
        android:textSize="14dp"
        android:paddingRight="23dp"
        />

</RelativeLayout>
